<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5E6E4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#FFF5F5"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true">

            <!-- Profile Image -->
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/person"
                android:backgroundTint="#D8C2FF"
                android:scaleType="centerInside" />

            <!-- Profile Details -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shrinivas Chavan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <!-- Address -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kharadi, Pune - 411 304, India"
                    android:textSize="14sp"
                    android:textColor="#6E6E6E" />

                <!-- Profile Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="14sp"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>

        <!-- Current Location Heading -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Location"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Map View (Placeholder) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp" />

        <!-- Start the Buzzer Button -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="START THE BUZZER"
            android:backgroundTint="#55514F"
            android:textColor="#B3E231"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_corner"/>

        <!-- Emergency Contacts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emergency Contacts"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Emergency Contacts Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It will Activate after the activation of BUZZER"
            android:textSize="14sp"
            android:textColor="#6E6E6E"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Contact 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- Contact Icon -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/person"
                android:backgroundTint="#D8C2FF"
                android:scaleType="centerInside" />

            <!-- Contact Name -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ContactNo1"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Checkbox -->
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="#7A5B94" />
        </LinearLayout>

        <!-- Emergency Contact 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <!-- Contact Icon -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/person"
                android:backgroundTint="#D8C2FF"
                android:scaleType="centerInside" />

            <!-- Contact Name -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ContactNo2"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Contact Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#6E6E6E"
                android:layout_marginEnd="16dp" />

            <!-- Checkbox -->
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="#7A5B94" />
        </LinearLayout>

        <!-- Emergency Contact 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Contact Icon -->
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/person"
                android:backgroundTint="#D8C2FF"
                android:scaleType="centerInside" />

            <!-- Contact Name -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ContactNo3"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Contact Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#6E6E6E"
                android:layout_marginEnd="16dp" />

            <!-- Checkbox -->
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="#7A5B94" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
